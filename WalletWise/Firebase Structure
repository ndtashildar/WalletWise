                    |- {spendingId} (document)
                        |- name: "Utilities"
                        |- amount: 150
                        |- date: "2023-04-02"
            |- Entertainment (document)
                |- categoryIcon: "icon"
                |- categoryBudget: 500
                |- categorySpending: 500
                |- spendingDetails (subcollection)
                    |- {spendingId} (document)
                        |- name: "Movie ticket"
